" -----------------------------------------------------------------------------
"  Looks.
" -----------------------------------------------------------------------------

if has("gui_running")

  " Use this font and size.
  set guifont=Anonymous\ Pro:h20

  " Use this color scheme.
  colorscheme solarized

endif

" Show line numbers.
set nu

" Show cursor position.
set ruler

" Enable syntax highlighting.
syntax on

" -----------------------------------------------------------------------------
"  Behaviour.
" -----------------------------------------------------------------------------

" Insert two spaces for each tab.
set expandtab
set tabstop=2

" Indent with two spaces.
set shiftwidth=2

" Don't wrap lines.
set wrap!
